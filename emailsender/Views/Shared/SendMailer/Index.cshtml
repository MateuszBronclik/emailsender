@model emailsender.Models.MailModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container align-content-center" style="max-width:380px">
    <ol class="breadcrumb row-cols-1" style="margin-top:50px; border-radius:24px">
        <div class="form-group">
            <form asp-controller="SendMailer" asp-action="Index" method="get">
                <label asp-for="@Model.From" class="form-label mt-4">Insert your email adress</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Your email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                <span asp-validation-for="From" class="text-danger"></span>
            </form>
        </div>

        <div class="form-group">
            <form asp-controller="SendMailer" asp-action="Index" method="get">
                <label asp-for="@Model.To" class="form-label mt-4">Insert the recipient's email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Recipient's email">
                <small id="emailHelp" class=""</small>
                <span asp-validation-for="To" class="text-danger"></span>
            </form>
        </div>

        <div class="form-group">
            <form asp-controller="SendMailer" asp-action="Index" method="get">
                <label asp-for="@Model.Subject" class="form-label mt-4">Insert message subject</label>
                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Subject">
                <small id="emailHelp" class="form-text text-muted">Maximum subject length is 256 characters</small>
            </form>
        </div>


        <div class="form-group">
            <form asp-controller="SendMailer" asp-action="Index" method="get">
                <label asp-for="@Model.Body" class="form-label mt-4">Your message to the recipient</label>
                <textarea class="form-control" id="exsampleTextarea" rows="6" spellcheck="false"></textarea>
            </form>
        </div>

        <div style="text-align:right; margin:10px auto 0px auto;">
            <form asp-controller="SendMailer">
                <input type="submit" value="Send" class="btn btn-primary"></input>
            </form>
        </div>
    </ol>
</div>

<div class="container align-content-center">
    <ol class="breadcrumb">
        <fieldset>
            <legend>
                Send Email
            </legend>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <label>From: </label>
                <label class="form-label mt-4">@Html.TextBoxFor(m=>m.From)</label>
                <p>To: </p>
                <p>@Html.TextBoxFor(m=>m.To)</p>
                <p>Subject: </p>
                <p>@Html.TextBoxFor(m=>m.Subject)</p>
                <p>Body: </p>
                <p>@Html.TextAreaFor(m=>m.Body)</p>
                <input type="submit" value="Send" />
            }
        </fieldset>
    </ol>
</div>

